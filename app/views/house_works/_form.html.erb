<div class="row">
  <div class="col-md-10 col-lg-8 mx-auto">
    <%= form_with(model: house_work, data: { turbo: false }) do |form| %>
      <div style="display:inline-flex">
        <div class='mb-3'>
          <%= form.text_field :work_name, class: 'form-control', placeholder: 'おてつだいを入力しよう' %>
        </div>
        <div class='mb-3'>
          <%= form.number_field :time, class: 'form-control', placeholder: '時間を入力しよう' %>
        </div>
        <div class='mb-3'>
          <%= form.submit 'スタート！', class: "btn btn-secondary" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
